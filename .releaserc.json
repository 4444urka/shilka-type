{
  "branches": "main",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "minor-feat", "release": "patch" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "scope": "README", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "test", "release": false },
          { "scope": "no-release", "release": false }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "–ö—Ä—É–ø–Ω—ã–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è" },
            { "type": "minor-feat", "section": "–ù–æ–≤—ã–µ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏" },
            { "type": "fix", "section": "–ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏—è" },
            { "type": "perf", "section": "–ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å" },
            { "type": "revert", "section": "–û—Ç–∫–∞—Ç—ã" },
            { "type": "docs", "section": "–î–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—è" },
            { "type": "style", "section": "–°—Ç–∏–ª–∏–∑–∞—Ü–∏—è" },
            { "type": "refactor", "section": "–†–µ—Ñ–∞–∫—Ç–æ—Ä–∏–Ω–≥" },
            { "type": "test", "section": "–¢–µ—Å—Ç—ã" },
            { "type": "build", "section": "–°–±–æ—Ä–∫–∞" },
            { "type": "ci", "section": "CI/CD" },
            { "type": "chore", "section": "–ü—Ä–æ—á–µ–µ", "hidden": true }
          ]
        }
      }
    ],
    
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "üéâ –≠—Ç–æ—Ç ${issue.pull_request ? 'PR' : 'issue'} –≤–∫–ª—é—á—ë–Ω –≤ –≤–µ—Ä—Å–∏—é [${nextRelease.version}](${releases[0].url}) üöÄ",
        "labels": ["released"],
        "releasedLabels": ["released<%= nextRelease.channel ? ` on @${nextRelease.channel}` : '' %>"]
      }
    ]
  ]
}

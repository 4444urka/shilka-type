{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "docs", "scope": "README", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "test", "release": false },
          { "scope": "no-release", "release": false }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "ü§Ø –ù–æ–≤—ã–µ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏" },
            { "type": "fix", "section": "üêõ –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏—è" },
            { "type": "perf", "section": "‚ö° –ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å" },
            { "type": "revert", "section": "‚è™ –û—Ç–∫–∞—Ç—ã" },
            { "type": "docs", "section": "üìù –î–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—è" },
            { "type": "style", "section": "üíÑ –°—Ç–∏–ª–∏–∑–∞—Ü–∏—è" },
            { "type": "refactor", "section": "‚ôªÔ∏è –†–µ—Ñ–∞–∫—Ç–æ—Ä–∏–Ω–≥" },
            { "type": "test", "section": "‚úÖ –¢–µ—Å—Ç—ã" },
            { "type": "build", "section": "üèóÔ∏è –°–±–æ—Ä–∫–∞" },
            { "type": "ci", "section": "üë∑ CI/CD" },
            { "type": "chore", "section": "üîß –ü—Ä–æ—á–µ–µ", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# üìã –ò—Å—Ç–æ—Ä–∏—è –∏–∑–º–µ–Ω–µ–Ω–∏–π"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "üéâ –≠—Ç–æ—Ç ${issue.pull_request ? 'PR' : 'issue'} –≤–∫–ª—é—á—ë–Ω –≤ –≤–µ—Ä—Å–∏—é [${nextRelease.version}](${releases[0].url}) üöÄ",
        "labels": ["released"],
        "releasedLabels": ["released<%= nextRelease.channel ? ` on @${nextRelease.channel}` : '' %>"]
      }
    ]
  ]
}
